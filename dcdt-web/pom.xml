    <profiles>
        <!-- Start/stop integration test components, if tests are not being skipped -->
        <profile>
            <id>test-integration-components</id>
            <activation>
                <property>
                    <name>!skipTests</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.tomcat.maven</groupId>
                        <artifactId>tomcat7-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>start-tomcat-1</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>run-war-only</goal>
                                </goals>
                                <configuration>
                                    <configurationDir>${project.build.testWebappDirectory}-tomcat</configurationDir>
                                    <contextReloadable>true</contextReloadable>
                                    <fork>true</fork>
                                    <hostName>${project.test.server.1.tomcat.1.host}</hostName>
                                    <jarScanAllDirectories>false</jarScanAllDirectories>
                                    <path>${project.test.server.1.tomcat.1.context}</path>
                                    <port>${project.test.server.1.tomcat.1.port.http}</port>
                                    <systemProperties>
                                        <dcdt.log.context.name>${project.artifactId}-test</dcdt.log.context.name>
                                        <dcdt.log.dir>${project.build.directory}/surefire-logs</dcdt.log.dir>
                                        <dcdt.tomcat.log.context.name>${project.artifactId}-test-tomcat</dcdt.tomcat.log.context.name>
                                        <dcdt.tomcat.log.dir>${project.build.directory}/surefire-logs</dcdt.tomcat.log.dir>
                                        <java.net.preferIPv4Addresses>true</java.net.preferIPv4Addresses>
                                        <java.net.preferIPv4Stack>true</java.net.preferIPv4Stack>
                                    </systemProperties>
                                    <warDirectory>${project.build.testWebappDirectory}</warDirectory>
                                </configuration>
                            </execution>
                            <execution>
                                <id>stop-tomcat-1</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>shutdown</goal>
                                </goals>
                                <configuration>
                                    <path>/</path>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>selenium-maven-plugin</artifactId>
                        <configuration>
                            <port>${project.test.server.1.selenium.1.port}</port>
                        </configuration>
                        <executions>
                            <execution>
                                <id>xvfb-selenium-1</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>xvfb</goal>
                                </goals>
                                <configuration>
                                    <display>${project.test.server.1.selenium.1.xvfb.display}</display>
                                    <logFile>${project.build.directory}/surefire-logs/selenium-xvfb.log</logFile>
                                    <reuse>true</reuse>
                                    <skip>${os.family.isNotUnix}</skip>
                                    <xauthEnabled>false</xauthEnabled>
                                </configuration>
                            </execution>
                            <execution>
                                <id>start-server-selenium-1</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>start-server</goal>
                                </goals>
                                <configuration>
                                    <background>true</background>
                                    <browserSideLog>true</browserSideLog>
                                    <logFile>${project.build.directory}/surefire-logs/selenium-server.log</logFile>
                                    <logOutput>true</logOutput>
                                </configuration>
                            </execution>
                            <execution>
                                <id>stop-server-selenium-1</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>stop-server</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
